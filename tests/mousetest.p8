pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
	poke(0x5f2d, 1)
	apix = __tac08__
	if apix then
		apix.cursor(true)
	end

	menuitem (1, "item 1", function () printh("Item 1") end)
	menuitem (2, "item 2", function () printh("Item 2") end)
	menuitem (3, "item 3", function () printh("Item 3") end)
	menuitem (4, "item 4", function () printh("Item 4") end)
end

function _update()
	x = stat(32)
	y = stat(33)
	b = stat(34)
	w = stat(36)
	if btnp(5) then
		apix.showmenu()
	end
end

function _draw()
	cls()
	print("x="..x)
	print("y="..y)
	print("b="..b)
	print("w="..w)
	spr(1, x-3, y-3)
	
end
