version 16
__lua__
function _init()
end

x = 64
y = 64
w = 8
h = 8

function _update()

	if btnp(0) then
		if btn(4) then 
			w -= 1
		else
			x -= 1
		end
	end
	if btnp(1) then
		if btn(4) then 
			w += 1
		else
			x += 1
		end
	end
	
	if btnp(2) then
		if btn(4) then 
			h -= 1
		else
			y -= 1
		end
	end
	
	if btnp(3) then
		if btn(4) then 
			h += 1
		else
			y += 1
		end
	end
end

function _draw()
	cls(1)
	sspr (8, 0, 8, 8, x, y, w, h)
end
