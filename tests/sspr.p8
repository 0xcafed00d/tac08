pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
end

x = 64
y = 64
w = 8
h = 8

flipval = 0;

function bit_true(v, b)
	return band(shr(v, b), 1) == 1
end

function bit_false(v, b)
	return not bit_true(v, b)
end


function _update()

	if btnp(0) then
		if btn(4) then 
			w -= 1
		else
			x -= 1
		end
	end
	if btnp(1) then
		if btn(4) then 
			w += 1
		else
			x += 1
		end
	end
	
	if btnp(2) then
		if btn(4) then 
			h -= 1
		else
			y -= 1
		end
	end
	
	if btnp(3) then
		if btn(4) then 
			h += 1
		else
			y += 1
		end
	end

	if btnp(5) then 
		flipval += 1
	end
end

function _draw()
	cls(1)
	sspr (8, 0, 8, 8, x, y, w, h, bit_true(flipval, 0), bit_true(flipval, 1))
end
