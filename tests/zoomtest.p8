pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

function _init()
	x = 64
	y = 64
	factor = 1
	rot = 0
end

function _update()
	rot += 1

	if btn(0) then x -= 1 end
	if btn(1) then x += 1 end
	if btn(2) then y -= 1 end
	if btn(3) then y += 1 end
	if btn(4) then factor -= 0.01 end
	if btn(5) then factor += 0.01 end
end

function _draw()
	cls(1)
	rect(0, 0, 127, 127, 7)
	circ(63, 63, 60, 8)
	circ(63, 63, 40, 8)
	circ(63, 63, 20, 8)
	line(0, 0, 127, 127, 10)
	line(0, 127, 127, 0, 10)

	spr(1, x-3, y-3)

	if __tac08__ then 
		__tac08__.zoom(x, y, factor, rot)
	end
end
